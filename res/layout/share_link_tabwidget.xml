<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="5dip"
	>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Title:"
		android:textStyle="bold"
		/>
	<EditText android:id="@+id/postOrShare_link_title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Link:"
		android:textStyle="bold"
		/>
	<EditText android:id="@+id/postOrShare_link_link"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Note:"
		android:textStyle="bold"
		/>
	<EditText android:id="@+id/postOrShare_link_note"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		/>
	<CheckBox android:id="@+id/postOrShare_link_isTweet"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="10dip"
		android:text="Also post in Twitter"
	/>
	<Button android:id="@+id/postOrShare_link_postButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Post"
		/>
	
</LinearLayout>