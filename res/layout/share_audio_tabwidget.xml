<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
			
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dip"
		>
	
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Title:"
			android:textStyle="bold"
			/>
		<EditText android:id="@+id/postOrShare_audio_title"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Audio:"
			android:textStyle="bold"
			android:paddingTop="10dip"
			/>
		<RadioGroup
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
			
			<RadioButton android:id="@+id/postOrShare_audio_byUpload"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Upload an audio"
				android:checked="true"
				/>
			<RadioButton android:id="@+id/postOrShare_audio_byUrl"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Use URL"
				/>
			
		</RadioGroup>
		<EditText android:id="@+id/postOrShare_audio_url"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			/>
		<FrameLayout android:id="@+id/postOrShare_audio_uploadFrame"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			
			<LinearLayout 
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>
				
				<Button android:id="@+id/postOrShare_audio_chooseButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Choose audio file"
					/>
				<TextView android:id="@+id/postOrShare_audio_displayFileName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="italic"
					/>
					
			</LinearLayout>
			
		</FrameLayout>		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Note:"
			android:textStyle="bold"
			android:paddingTop="10dip"
			/>
		<EditText android:id="@+id/postOrShare_audio_note"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			/>
		<CheckBox android:id="@+id/postOrShare_audio_isTweet"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="10dip"
			android:text="Also post in Twitter"
			/>
		<Button android:id="@+id/postOrShare_audio_postButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Post"
			/>
		
	</LinearLayout>

</ScrollView>